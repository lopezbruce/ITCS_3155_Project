<h1>Show User</h1>


<p>
  <strong>Email:</strong>
  <%= @user.email %>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<% @user.stats.each do |stat| %>
<p>
  <strong>Score:</strong>
  <%= stat.score %>
  <strong>Name:</strong>
  <%= stat.name %>
</p>
<% end %>

<h2>Add a stat:</h2>
<%= form_for([@user, @user.stats.new]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>